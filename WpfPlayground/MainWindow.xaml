<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfPlayground"
        xmlns:ed="http://schemas.microsoft.com/expression/2010/drawing"
        x:Class="WpfPlayground.MainWindow"
        mc:Ignorable="d"
        Title="Gauge Chart Demo"
        SizeToContent="WidthAndHeight"
        Background="#ECF0F1">
    <Grid>
        <!-- Use Canvas for painting? Use Ellipse? Use Arc? Put inside a border -->
        <ed:Arc ArcThickness="1"
                ArcThicknessUnit="Percent"
                StartAngle="90"
                EndAngle="360"
                Fill="#3498DB"
                Stroke="#1B76B2"
                StrokeThickness="5"
                Width="200"
                Height="200"
                Margin="100"/>
    </Grid>
</Window>
